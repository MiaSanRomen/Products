@using Products.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EditCategoryViewModel
@{
    ViewBag.Title = Model.IsNew ? "Новая категория" : "Изменить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Category.CategoryId">
    <div class="form-group" style="padding: 5px">
        <label asp-for="Category.Name" class="control-label">Название</label>
        <input type="text" asp-for="Category.Name" class="form-control" />
    </div>
    <input type="text" asp-for="Category.CategoryId" hidden="true" class="form-control" />
    <input type="text" asp-for="Category.ImageId" hidden="true" class="form-control" />
    <div class="form-group" style="padding: 5px">
        <input type="submit" value="Сохранить" class="btn btn-outline-success" />
    </div>
</form>