@using Products.ViewModels.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterViewModel
@{
    ViewData["Title"] = "Products' catalog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1>
        Регистрация
    </h1>
</div>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="padding: 5px">
        <label class="control-label" asp-for="Username"></label><br />
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group" style="padding: 5px">
        <label class="control-label" asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group" style="padding: 5px">
        <label class="control-label" asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group" style="padding: 5px">
        <label class="control-label" asp-for="PasswordConfirm"></label><br />
        <input class="form-control" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="form-group" style="padding: 5px">
        <input type="submit" value="Регистрация" class="btn btn-outline-success btn-block" />
    </div>
</form>