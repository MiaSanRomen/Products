@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
        <span class="navbar-text text-white">Добрый день @User.Identity?.Name!</span>
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <input class="text-black" type="submit" value="Выход" />
            </form>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Войти</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
}
</ul>
