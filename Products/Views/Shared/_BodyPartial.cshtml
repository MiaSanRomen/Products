@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Principal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div style="background-image: url(/images/shop.jpg); background-size: cover" class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <a asp-controller="Categories" asp-action="Index" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Все категории:</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    @foreach (var item in Model.Categories)
                    {
                        <li class="nav-item">
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId" class="nav-link align-middle px-0">
                                <span class="ms-1 d-none d-sm-inline">@item.Name (@item.Count)</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col py-3" >
            <div class="container-fluid">
                <div class="container" style="background-color: rgb(222, 226, 230)">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>
